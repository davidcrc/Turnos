@* Hacer los datos de la tabla iterables *@
@model IEnumerable<Turnos.Models.Especialidad>

<!DOCTYPE html>

<html>

<head>
  <title>Especialidad</title>
</head>

<body>
  <table>
    <thead>
      <tr>
        <th>
          @Html.DisplayNameFor(model => model.Descripcion)
        </th>
      </tr>
    </thead>

    <tbody>
      @* Aqui mostraremos los registros de la BD *@
      @* <tr>
        <td>traumatologia</td>
      </tr>
      <tr>
        <td>Cardiologia</td>
      </tr> *@
      @foreach (var item in Model)
      {
        <tr>
          <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
        </tr>
      }
    </tbody>

  </table>
</body>

</html>